    <div class="main-content">

        <div class="item-container">
            <img src="/public/images/catalogue/shoe2.jpg" alt="" class="item-container-item-image">
            <img src="/public/images/catalogue/2407520001_2_13_1.jpg" alt="" class="item-container-item-image">
        </div>
        <div class="item-custom-details">
            <% items.shoes.forEach(element => {  %>
                
          
            <div class="item-detail" data-item-id= "<%= element.id%>">
                <p class="item-detail-text"><%=element.name%></p>
                <p class="item-detail-price"><%=element.price%></p>
                <span class="item-price-standard">MRP incl. of all taxes</span>
            </div>

            <div class="item-model-no-and-details">
                <span class="item-model-no"><%=element.model_no%></span>
                <div class="item-full-detail">
                    <%=element.more_detail%>
                </div>
                <p class="view-less">View more</p>
            </div>

         <%  }); %>

            <div class="size-guide-contaier">
                <hr class="size-guide-hr">
                <ul class="size-guide-list">
                    <% items.sizes.forEach(element => { %>
                        
                    
                    <li class="size-guide-list-item"><%=element.five%></li>
                    <li class="size-guide-list-item"><%=element.six%></li>
                    <li class="size-guide-list-item"><%=element.seven%></li>
                    <li class="size-guide-list-item"><%=element.eight%></li>
                    <li class="size-guide-list-item"><%=element.nine%></li>
                    <li class="size-guide-list-item"><%=element.ten%></li>
                    <li class="size-guide-list-item"><%=element.eleven%></li>
                    <% }); %>
                </ul>
                <hr class="size-guide-hr">
                <div class="size-guide-pop-up">
                    <a href="#" class="size-guide-pop-up-link">size guide</a>
                </div>

                <button class="size-guide-button">add</button>

                <div class="item-cutomization-detail-pop-up">
                    <ul class="items-customs-pop-up">
                        <li class="item-customs-pop-up">composition and care</li>
                        <li class="item-customs-pop-up">find your size</li>
                        <li class="item-customs-pop-up">delivery, exchange and returns</li>
                        <li class="item-customs-pop-up">share</li>
                    </ul>
